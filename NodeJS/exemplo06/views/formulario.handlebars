<div class="container">
    <h1>Formulário de Postagem</h1>
    <form action="/add" method="POST">
      <div class="form-group mb-2">
        <label for="titulo">Título</label>
        <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite o título">
      </div>
      <div class="form-group mb-4">
        <label for="conteudo">Descrição</label>
        <textarea class="form-control" id="conteudo" name="conteudo" rows="3" placeholder="Digite a descrição"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Salvar</button>
      <a href="/" class="btn btn-secondary">Voltar</a>
    </form>
  </div>